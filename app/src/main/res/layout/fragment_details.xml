<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/track"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        android:layout_margin="@dimen/defaultBigMargin" />

    <TextView
        android:id="@+id/tv_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/test_track_title"
        android:maxLines="2"
        android:ellipsize="end"
        android:scrollHorizontally="true"
        android:maxWidth="220dp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/black"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="@id/iv_cover"
        app:layout_constraintStart_toEndOf="@id/iv_cover"
        app:layout_constraintEnd_toStartOf="@id/iv_explicit"
        android:layout_marginStart="@dimen/defaultMargin"
        app:layout_constraintBottom_toTopOf="@id/tv_artist" />

    <TextView
        android:id="@+id/tv_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/test_artist"
        android:maxLines="2"
        android:ellipsize="end"
        android:scrollHorizontally="true"
        android:maxWidth="220dp"
        android:textStyle="bold"
        android:textSize="26sp"
        app:layout_constraintTop_toBottomOf="@id/tv_track"
        app:layout_constraintStart_toStartOf="@id/tv_track"
        app:layout_constraintBottom_toBottomOf="@id/iv_cover"
        />

    <ImageView
        android:id="@+id/iv_explicit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/explicit"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@id/iv_cover"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/defaultBigMargin" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_lyrics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/test_lyrics"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal"
                android:padding="@dimen/defaultMargin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
